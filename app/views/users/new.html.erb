<% provide(:title, 'Add new employee') %>
<h1>Add New Employee</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.submit "Create account", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

